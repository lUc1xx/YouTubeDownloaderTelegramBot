{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "moduleResolution": "Node",
        "outDir": "lib",
        "allowJs": true,
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "isolatedModules": true,
        "types": ["@types/node"],
        "baseUrl": ".",
        "paths": {
            "/@/*": ["./src/*"],
            "/$/*": ["src/types/*"]
        }
    },
    "include": ["src/**/*.ts"],
}